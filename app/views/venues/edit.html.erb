<% provide(:title, "Edit #{@venue.name} | Venues") %>
<section id="venue-edit" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Editing <%= @venue.name %></h1>
				<%= render :partial => 'form' %>
				<%= link_to @venue, title: 'Show', class: 'btn btn-primary' do %><%= inline_icon('corner-up-left', 'Show', 'left') %><% end %>&nbsp;<% if current_user.try(:admin?) %><%= link_to venue_path(@venue), title: 'Delete', method: :delete, data: { confirm: "Are you sure you would like to delete #{@venue.name}?" }, class: 'btn btn-danger' do %><%= inline_icon('trash', 'Delete', 'left') %><% end %><% else %><%= link_to deletion_request_path(:id => @venue.id, :type => 'venue'), title: 'Request Deletion', class: 'btn btn-danger' do %><%= inline_icon('trash', 'Request Deletion', 'left') %><% end %><% end %>
			</div>
		</div>
	</div>
</section>
