<section id="">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h2><%= @venue.name %></h2>
				<div class="row">
					<div class="col-sm-6">
						<% if !@venue.url.blank? %>
						<p><a href="<%= @venue.url %>"><%= @venue.url %></a></p>
						<% end %>
						<p><%= Venuetype.find(@venue.typeid).name %></p>
						<p>Yelp: <%= @venue.yelpid %></p>
						<% if !@venue.neighborhoodid.blank? %>
						<p><%= Neighborhood.find(@venue.neighborhoodid).name %></p>
						<% end %>
						<% if !@venue.street.blank? %>
						<p><a href="http://maps.google.com/maps?q=<%= to_url(@venue.fulladdress_withname)%>"><%= @venue.street %><br/><%= @venue.city %>, <%= @venue.state %></a></p>
						<% end %>
						<p>Rating: <%= number_with_precision(@venue.ratings.average('rating'), precision: 2) %> / 5 (<%= @venue.ratings.count %>)</p>
						<% if !@venue.ratings.where(raterid: current_user.id).empty? %>
						<p>My Rating: <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><%= @venue.ratings.where(raterid: current_user.id).sum('rating') %></p>
						<% end %>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-6 col-sm-offset-3">
						<h2>Comments</h2>
						<% @venue.comments.each do |comment| %>
						<div class="comment">
							<div class="comment-user-info">
								<img class="user-avatar-thumb" src="<%= User.find(comment.commenterid).avatar %>">
						    <%= User.find(comment.commenterid).fullname %>
							</div>
							<div class="well well-sm">
								<%= comment.body %>
							</div>
						</div>
						<% end %>
						
						<% if user_signed_in? %>
							<p>Commenting as <%= current_user.fullname %>.</p>
							<%= form_for([@venue, @venue.comments.build]) do |f| %>
								<%= f.text_area :body, :class => 'form-control' %>
							  <%= f.submit %>
							<% end %>
							<% if !@venue.ratings.where(raterid: current_user.id).empty? %>
							Has Rated<br>
							<% else %>
								<%= form_for([@venue, @venue.ratings.build]) do |f| %>
								<p>
								  <%= f.label :rating %><br />
								  <%= f.text_field :rating %>
								</p>
								<p>
								  <%= f.submit %>
								</p>
								<% end %>
							<% end %>
						<% else %>
						<p>You must be <%= link_to "signed in", new_user_session_path %> to comment.</p>
						<% end %>
						
						
						<%= link_to 'Edit', edit_venue_path(@venue) %> |
						<%= link_to venue_path(@venue), title: 'Delete', method: :delete, data: { confirm: "Are you sure you would like to delete #{@venue.name}?" } do %><i class="fa fa-fw fa-2x fa-trash-o text-danger"></i><% end %> | 
						<%= link_to 'Back', venues_path %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



