<div class="form-group">
  <%= label(:venue, :typeid) do %>Type<% end %><br>
  <% if params[:typeid] %>
  <%= select(:venue, :typeid, Venuetype.all.collect {|vt| [ vt.name, vt.id ] }, { :selected => params[:typeid] }, { :class => 'form-control' }) %>
  <% else %>
  <%= collection_select(:venue, 'typeid', Venuetype.order('name ASC'), :id, :name, {}, { :class => 'form-control' }) %>
  <% end %>
</div>
<div class="form-group">
  <%= label(:venue, :price) do %>Price<% end %> <small>1 = $, 2 = $$, 3 = $$$, 4 = $$$$</small><br>
  <%= text_field(:venue, :price, { :class => 'form-control', :placeholder => '#' }) %>
</div>