<% provide(:title, "Users") %>
<section id="users-all" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
				<ul class="user-list">
					<% @users.each do |user| %>
			    <li>
						<div class="row">
							<div class="col-sm-3 col-xs-5">
								<%= link_to user_path(user), title: user.fullname do %><img class="user-avatar" src="<%= user.avatar.url(:medium) %>" /><% end %>
							</div>
							<div class="col-sm-9 col-xs-7">
								<%= link_to user.fullname, user, title: user.fullname %>
								<br>
								<strong><%= user.user_score %> User Score</strong>
								<br>
								<%= user.user_public_comment_count %> Comments
								<br>
								<%= user.user_venue_rating_count %> Venue Ratings
								<br>
								<%= user.user_item_rating_count %> Menu Item Ratings
								<% if current_user.try(:admin?) %><br>
								<%= link_to "Delete User?", user, method: :delete, data: { confirm: "You sure?" } %>
								<% end %>
							</div>
						</div>
					</li>
			    <% end %>
				</ul>
			</div>
		</div>
	</div>
</section>
