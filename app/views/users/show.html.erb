<% provide(:title, "#{@user.fullname} | User ##{@user.id}") %>
<section id="user-show" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div id="user-nameandphoto">
					<img class="user-avatar user-avatar-med" src="<%= @user.avatar.url(:medium) %>" alt="<%= @user.fullname %>">
					<h1><%= @user.fullname %><% if is_current_user(@user) %> <small><%= link_to 'Edit Profile', edit_user_registration_path %></small><% end %></h1>
				</div>
				<div id="user-count-block" class="row text-center">
					<div class="col-sm-3 col-xs-6 main">
						<div class="user-count-number"><%= @user.user_score %></div>
						<div class="user-count-title">User Score</div>
					</div>
					<div class="col-sm-3 col-xs-6">
						<div class="user-count-number"><%= @user.user_public_comment_count %></div>
						<div class="user-count-title sub">Public Comments</div>
					</div>
					<div class="col-sm-3 col-xs-6">
						<div class="user-count-number"><%= @user.user_venue_rating_count %></div>
						<div class="user-count-title">Venue Ratings</div>
					</div>
					<div class="col-sm-3 col-xs-6">
						<div class="user-count-number"><%= @user.user_item_rating_count %></div>
						<div class="user-count-title">Menu Item Ratings</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-4">
						<%= link_to user_tries_path(@user.id), class: 'btn btn-block btn-danger' do %>Places to Try<% end %>
						<%= link_to user_ratings_path(@user.id), class: 'btn btn-block btn-primary' do %>Venue Ratings<% end %>
						<%= link_to user_comments_path(@user.id), class: 'btn btn-block btn-success' do %>Comments<% end %>
						<%= link_to user_item_ratings_path(@user.id), class: 'btn btn-block btn-warning' do %>Menu Item Ratings<% end %>
						<%= link_to user_eats_path(@user.id), class: 'btn btn-block btn-info' do %>Eats<% end %>
					</div>
					<div class="col-sm-8">
						<hr class="visible-xs">
						<h2>Recent Activity</h2>
						<% if @userRecentActivity.empty? %>
						<p><% if is_current_user(@user) %>You have<% else %><%= @user.firstname %> has<% end %> no recent activity.</p>
						<% else %>
						<ul class="activity-list nolast">
							<% @userRecentActivity.sort{|a,b| b.updated_at <=> a.updated_at }.first(10).each do |activity| %>
								<% if !activity.kind_of? Comment or !activity.private or (activity.private and is_current_user(activity.user, true)) %>
								<li<% if activity.kind_of? Comment and activity.private %> class="private"<% end %>>
									<div class="activity-date pull-right"><small><%= time_ago_in_words(activity.updated_at).titleize %> ago</small></div>
									<% if activity.kind_of? Venue or activity.kind_of? Neighborhood or activity.kind_of? Venuetype %>
										<%
											if activity.kind_of? Venue %><i class="fa fa-fw fa-home left"></i><%= link_to venue_path(activity) do %><%= activity.name %><% end
											elsif activity.kind_of? Neighborhood %><i class="fa fa-fw fa-map-marker left"></i><%= link_to neighborhood_path(activity) do %><%= activity.name %><% end
											elsif activity.kind_of? Venuetype %><i class="fa fa-fw fa-cutlery left"></i><%= link_to venuetype_path(activity) do %><%= activity.name %><% end %>
										<% end %>
										<% if activity.updated_at == activity.created_at %>added<% else %>updated<% end %>.
									<% elsif activity.kind_of? Try or activity.kind_of? Rating or activity.kind_of? Comment or activity.kind_of? ItemRating or activity.kind_of? Eat
										if activity.kind_of? Try %><i class="fa fa-fw fa-plus left"></i><%
										elsif activity.kind_of? Rating %><i class="fa fa-fw fa-star left"></i><%
										elsif activity.kind_of? Comment %><i class="fa fa-fw fa-quote-left left"></i><%
										elsif activity.kind_of? ItemRating %><i class="fa fa-fw <% if activity.liked %>fa-thumbs-up green<% else %>fa-thumbs-down red<% end %> left"></i><%
										elsif activity.kind_of? Eat %><i class="fa fa-fw fa-coffee left"></i><% end
										if activity.kind_of? Try %>Added <%= link_to venue_path(activity.venue_id) do %><%= activity.venue.name %><% end %> to the <%= link_to user_tries_path(@user.id) do %>list of places to try<% end %>.<%
										elsif activity.kind_of? Rating %>Rated <%= link_to venue_path(activity.venue_id) do %><%= activity.venue.name %><% end %> <%= pluralize(activity.rating, 'star') %>.
										<% elsif activity.kind_of? Comment %>Commented on <%= link_to venue_path(activity.venue_id) do %><%= activity.venue.name %><% end %>:
										<div class="activity-comment"><%= wrap_quotes(activity.body).html_safe %></div>
										<% elsif activity.kind_of? ItemRating %><% if activity.liked %>Liked<% else %>Disliked<% end %> the <%= activity.item.name %> at <%= link_to activity.item.venue.name, activity.item.venue %>.
										<% elsif activity.kind_of? Eat %>Had the <%= activity.item.name %> at <%= link_to activity.item.venue.name, activity.item.venue %>.
										<% end %>
									<% end %>
								</li>
								<% end %>
							<% end %>
						</ul>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
