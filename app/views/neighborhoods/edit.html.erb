<% provide(:title, "Edit #{@neighborhood.name} | Neighborhoods") %>
<section id="neighborhood-edit" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Editing <%= @neighborhood.name %></h1>
				<%= render 'form' %>
				<%= link_to @neighborhood, title: 'Show', class: 'btn btn-primary' do %><i class="fa fa-undo left"></i>Show<% end %>&nbsp;<%= link_to neighborhood_path(@neighborhood), title: 'Delete', method: :delete, data: { confirm: "Are you sure you would like to delete #{@neighborhood.name}?" }, class: 'btn btn-danger' do %><i class="fa fa-trash-o left"></i>Delete<% end %>
			</div>
		</div>
	</div>
</section>
