<% provide(:title, "Edit #{@neighborhood.name} | Neighborhoods") %>
<section id="neighborhood-edit" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Editing <%= @neighborhood.name %></h1>
				<%= render 'form' %>
				<%= link_to @neighborhood, title: 'Show', class: 'btn btn-primary' do %><%= inline_icon('corner-up-left', 'Show', 'left') %><% end %>&nbsp;<% if current_user.try(:admin?) %><%= link_to neighborhood_path(@neighborhood), title: 'Delete', method: :delete, data: { confirm: "Are you sure you would like to delete #{@neighborhood.name}?" }, class: 'btn btn-danger' do %><%= inline_icon('trash', 'Delete', 'left') %><% end %><% else %><%= link_to deletion_request_path(:id => @neighborhood.id, :type => 'neighborhood'), title: 'Request Deletion', class: 'btn btn-danger' do %><%= inline_icon('trash', 'Request Deletion', 'left') %><% end %><% end %>
			</div>
		</div>
	</div>
</section>
