<%= form_for(@neighborhood) do |f| %>
  <% if @neighborhood.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@neighborhood.errors.count, "error") %> prohibited this neighborhood from being saved:</h2>

      <ul>
      <% @neighborhood.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :parentneighborhoodid, 'Parent Neighborhood' %><br>
    <%= collection_select(:neighborhood, 'parentneighborhoodid', Neighborhood.order('name ASC'), :id, :name, { :include_blank => 'None' }, { :class => 'form-control' }) %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success"><i class="fa fa-save left"></i>Save</button>
  </div>
<% end %>
