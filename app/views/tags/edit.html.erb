<% provide(:title, "Edit #{@tag.name} | Tags") %>
<section id="tag-edit" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Editing <%= @tag.name %></h1>
				<%= render 'form' %>
				<%= link_to @tag, title: 'Show', class: 'btn btn-primary' do %><%= inline_icon('corner-up-left', 'Show', 'left') %><% end %>&nbsp;<% if current_user.try(:admin?) %><%= link_to tag_path(@tag), title: 'Delete', method: :delete, data: { confirm: "Are you sure you would like to delete #{@tag.name}?" }, class: 'btn btn-danger' do %><%= inline_icon('trash', 'Delete', 'left') %><% end %><% else %><%= link_to deletion_request_path(:id => @tag.id, :type => 'tag'), title: 'Request Deletion', class: 'btn btn-danger' do %><%= inline_icon('trash', 'Request Deletion', 'left') %><% end %><% end %>
			</div>
		</div>
	</div>
</section>
