<% provide(:title, "#{@tag.name} | Tags") %>
<section>
	<div class="container">
		<div class="pure-g">
			<div class="pure-u-1-1">
				<% if @tag.id == 1 || @tag.id == 2 %>
				<h1><%= pluralize_without_count(2, @tag.name) %></h1>
				<% else %>
				<h1><%= @tag.name %></h1>
				<% end %>
				<p><% if @tag.hasParent %>Part of <%= link_to @tag.parent do %><%= @tag.parent.name %><% end %>. <% end %><% if !@tag.children.empty? %>Includes <%= @tag.children.map { |tag| link_to tag.name, tag }.join(', ').html_safe %>.<% end %></p>
				<% if !@venues.empty? %>
				<div class="pure-g">
					<div class="pure-u-1-1 pure-u-md-2-3">
						<table>
						  <thead>
						    <tr>
						      <th class="col-name"><%= sortable 'name', 'Name' %></th>
						      <th class="col-neighborhood"><%= sortable 'neighborhood_name', 'Neighborhood' %></th>
						      <th class="col-rating"><%= sortable 'rating', 'Rating' %></th>
						      <th class="col-price"><%= sortable 'price', 'Price' %></th>
						      <% if @tag.id != 2 and @tag.parent_tag_id != 2 %><th class="col-byob"><%= sortable 'byob', 'BYOB?' %></th><% end %>
						    </tr>
						  </thead>
						  <tbody>
								<% @venues.each do |venue| %>
					      <tr>
					        <td class="col-name"><%= link_to venue, title: venue.name do %><%= venue.name %><% end %></td>
					        <td class="col-neighborhood"><%= link_to venue.neighborhood do %><%= venue.neighborhood.name %><% end %></td>
					        <td class="col-rating"><%= rating_display(venue) %></td>
					        <td class="col-price"><%= render_price(venue.price) %></td>
					        <% if @tag.id != 2 and @tag.parent_tag_id != 2 %><td class="col-byob"><% if venue.byob %><%= inline_icon('check', '', 'green') %><% else %><%= render_dash %><% end %></td><% end %>
					      </tr>
						    <% end %>
						  </tbody>
						</table>
						<% if @isPaginated %>
						<%= render 'layouts/venues_pagination' %>
						<% end %>
					</div>
					<div class="pure-u-1-1 pure-u-md-1-3">
						<div id="google-map" class="map map-neighborhood"></div>
					</div>
				</div>
				<% end %>
				<p class="text-center">
					<%= link_to 'Edit', edit_tag_path(@tag) %>&nbsp;&bull;&nbsp;<%= link_to new_venue_path({ :tags => @tag.id }) do %>Add a new <%= @tag.name %> venue<% end %>
				</p>
			</div>
		</div>
	</div>
</section>

<%= render 'layouts/mapscript', :mapvenues => @venues_unpaginated.present? ? @venues_unpaginated : @venues %>
