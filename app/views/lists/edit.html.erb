<% provide(:title, "Edit '#{@list.title}'") %>
<section id="list-edit" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Editing '<%= @list.title %>' List</h1>
				<%= render 'form' %>
				<%= link_to user_list_path(@list.user, @list), title: 'Show', class: 'btn btn-primary' do %><%= inline_icon('corner-up-left', 'Show', 'left') %><% end %>&nbsp;<%= link_to user_list_path(@list.user, @list), title: 'Delete', method: :delete, data: { confirm: "Are you sure you would like to delete #{@list.title}?" }, class: 'btn btn-danger' do %><%= inline_icon('trash', 'Delete', 'left') %><% end %>
			</div>
		</div>
	</div>
</section>
