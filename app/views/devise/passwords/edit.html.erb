<% provide(:title, "Change Your Password") %>
<section>
	<div class="container">
		<div class="pure-g">
			<div class="pure-u-sm-1-6 pure-md-1-4"></div>
			<div class="pure-u-1-1 pure-u-sm-2-3 pure-u-md-1-2">
				<h1>Change Your Password</h1>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
					<div class="form-group">
						<%= f.label :password, "New Password" %>
						<%= f.password_field :password, { :class => 'form-control', :autofocus => true } %>
					</div>
          <div class="form-group">
						<%= f.label :password_confirmation, "Confirm New Password" %>
						<%= f.password_field :password_confirmation, { :class => 'form-control' } %>
					</div>
				  <button type="submit" class="btn btn-success btn-block">Submit</button>
				<% end %>
				<br>
				<p class="text-center"><%= render "devise/shared/links" %></p>
			</div>
		</div>
	</div>
</section>
