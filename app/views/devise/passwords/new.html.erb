<% provide(:title, "Forgot Your Password?") %>
<section>
	<div class="container">
		<div class="pure-g">
			<div class="pure-u-sm-1-6 pure-md-1-4"></div>
			<div class="pure-u-1-1 pure-u-sm-2-3 pure-u-md-1-2">
				<h2>Forgot your password?</h2>
				<p>Enter your email below to receive a password reset email.</p>
				<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
					<div class="form-group">
						<%= f.label :email %>
						<%= f.email_field :email, { :class => 'form-control', :autofocus => true } %>
					</div>
				  <button type="submit" class="btn btn-success btn-block">Reset Password</button>
				<% end %>
				<br>
				<p class="text-center"><%= render "devise/shared/links" %></p>
			</div>
		</div>
	</div>
</section>
