<% provide(:title, "Register") %>
<section id="user-new" class="pad">
	<div class="container">
		<div class="pure-g">
			<div class="pure-u-1-1">
				<h2>Sign Up</h2>
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :multipart => true) do |f| %>
				  <%= devise_error_messages! %>
				  <div class="pure-g">
				  	<div class="pure-u-1-1 pure-u-sm-11-24">
						  <div class="form-group">
						  	<%= f.label :firstname, 'First Name' %>
						  	<%= f.text_field :firstname, :class => 'form-control', :autofocus => true %>
						  </div>
						  <div class="form-group">
						  	<%= f.label :lastname, 'Last Name' %>
						  	<%= f.text_field :lastname, :class => 'form-control' %>
						  </div>
						  <div class="form-group">
						  	<%= f.label :email, 'Email Address' %>
						  	<%= f.email_field :email, :class => 'form-control' %>
						  </div>
						  <div class="form-group">
						  	<%= f.label :password, 'Password' %>
						  	<%= f.password_field :password, :class => 'form-control' %>
						  </div>
						  <div class="form-group">
						  	<%= f.label :password_confirmation, 'Password Confirmation' %>
						  	<%= f.password_field :password_confirmation, :class => 'form-control' %>
						  </div>
				  	</div>
						<div class="pure-u-sm-1-12"></div>
				  	<div class="pure-u-1-1 pure-u-sm-11-24">
						  <div class="form-group">
						    <%= f.label :street %>
						    <%= f.text_field :street, { :class => 'form-control' } %>
						  </div>
						  <div class="form-group">
						    <%= f.label :city %>
						    <%= f.text_field :city, :value => 'Chicago', :class => 'form-control' %>
						  </div>
						  <div class="form-group">
						    <%= f.label :state %>
						    <%= select(:user, 'state', us_states, { :selected => 'IL', :include_blank => 'None' }, { :class => 'form-control' }) %>
						  </div>
						  <div class="form-group">
						  	<%= f.label :avatar, 'Profile Picture' %>
						  	<%= f.file_field :avatar %>
						  </div>
							<div class="form-group">
								<%= flash[:recaptcha_error] %>
								<%= recaptcha_tags %>
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-success">Sign Up</button>
				<% end %>
			</div>
		</div>
	</div>
</section>
