<% provide(:title, "Sign In") %>
<section>
	<div class="container">
		<div class="pure-g">
			<div class="pure-u-sm-1-6 pure-md-1-4"></div>
			<div class="pure-u-1-1 pure-u-sm-2-3 pure-u-md-1-2">
				<% if notice %><p class="notice"><%= notice %></p><% end %>
				<% if alert %><p class="alert"><%= alert %></p><% end %>
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<div class="form-group">
						<%= f.label :email %>
						<%= f.email_field :email, { :class => 'form-control', :autofocus => true } %>
					</div>
					<div class="form-group">
						<%= f.label :password %>
						<%= f.password_field :password, { :class => 'form-control', :autofocus => true } %>
					</div>
				  <% if devise_mapping.rememberable? %>
					<div class="form-group form-group-multiple-options">
				  	<p class="text-center"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
					</div>
				  <% end %>
				  <button type="submit" class="btn btn-success btn-block">Sign In</button>
				<% end %>
				<br>
				<p class="text-center"><%= render "devise/shared/links" %></p>
			</div>
		</div>
	</div>
</section>
