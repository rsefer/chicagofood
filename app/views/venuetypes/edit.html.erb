<% provide(:title, "Edit #{@venuetype.name} | Venue Types") %>
<section id="venuetype-edit" class="pad">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Editing <%= @venuetype.name %></h1>
				<%= render 'form' %>
				<%= link_to @venuetype, title: 'Show', class: 'btn btn-primary' do %><i class="fa fa-undo left"></i>Show<% end %>&nbsp;<% if current_user.try(:admin?) %><%= link_to venuetype_path(@venuetype), title: 'Delete', method: :delete, data: { confirm: "Are you sure you would like to delete #{@venuetype.name}?" }, class: 'btn btn-danger' do %><i class="fa fa-trash-o left"></i>Delete<% end %><% else %><% end %><%= link_to deletion_request_path(:id => @venuetype.id, :type => 'venuetype'), title: 'Request Deletion', class: 'btn btn-danger' do %><i class="fa fa-trash-o left"></i>Request Deletion<% end %>
			</div>
		</div>
	</div>
</section>
