<%= form_for(@venuetype) do |f| %>
  <% if @venuetype.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@venuetype.errors.count, "error") %> prohibited this venuetype from being saved:</h2>

      <ul>
      <% @venuetype.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :parenttypeid, 'Parent Type' %><br>
    <% if !@venuetype.parenttypeid.nil? %>
    <%= collection_select(:venuetype, 'parenttypeid', Venuetype.order('name ASC'), :id, :name, {}, { :class => 'form-control' } ) %>
    <% else %>
    <%= collection_select(:venuetype, 'parenttypeid', Venuetype.order('name ASC'), :id, :name, { :selected => 1 }, { :class => 'form-control' } ) %>
    <% end %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success"><i class="fa fa-save left"></i>Save</button>
  </div>
<% end %>
